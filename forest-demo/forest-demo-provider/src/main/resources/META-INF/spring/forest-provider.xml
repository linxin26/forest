<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:forest="http://code.solinx.co/schema/forest"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.solinx.co/schema/forest
       http://code.solinx.co/schema/forest/forest.xsd">

    <forest:registry address="zookeeper://192.168.254.144:2181"/>

    <forest:service interface="co.solinx.forest.demo.api.IHelloForest" ref="helloForest" protocol="forest"
                    owner="linx"/>
    <forest:service interface="co.solinx.forest.demo.api.IHelloRPC" ref="helloRpc" protocol="forest"
                    owner="linx"></forest:service>

    <bean id="helloForest" class="co.solinx.forest.demo.impl.HelloForestImpl"/>
    <bean id="helloRpc" class="co.solinx.forest.demo.impl.HelloRPCImpl"></bean>

    <bean id="bidService" class="co.solinx.forest.common.utils.Holder"/>
</beans>